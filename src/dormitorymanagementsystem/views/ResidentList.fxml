    </TableView>
    <TextArea fx:id="resultArea" layoutX="14.0" layoutY="14.0" prefHeight="200.0" prefWidth="200.0"/>
    <TextField fx:id="searchField" layoutX="524.0" layoutY="13.0" onKeyTyped="#searchForResident" prefHeight="26.0"
               prefWidth="200.0"/>
    <Label layoutX="472.0" layoutY="18.0" text="Wyszukaj:"/>
    <ChoiceBox fx:id="filteringBox" layoutX="308.0" layoutY="14.0" prefWidth="150.0"/>
    <Label layoutX="277.0" layoutY="18.0" text="Filtruj:"/>
</AnchorPane>
